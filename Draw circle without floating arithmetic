 private static void Drawcircle(int r){// be careful
	    		        	int n=2*r+1;
	    		        	for(int i=0;i<n;i++){
	    		        		for(int j=0;j<n;j++){
	    		        			int x=i-r;// using symmetric info!!!
	    		        			int y=j-r;
	    		        			if(x*x+y*y<=r*r){
	    		        				System.out.print("*");
	    		        			}else System.out.print(" ");
	    		        			System.out.print(" ");
	    		        		}System.out.println("");
	    		        	}
	    		        }
